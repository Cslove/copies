{
  "name": "copies",
  "version": "1.0.0",
  "description": "智能剪贴板管理器",
  "keywords": [
    "clipboard",
    "macos",
    "manager"
  ],
  "license": "MIT",
  "author": "Copies Team",
  "type": "module",
  "main": "./dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && electron-builder",
    "preview": "vite preview",
    "electron:serve": "vite serve",
    "electron:build": "vite build && electron-builder --dir",
    "postinstall": "electron-builder install-app-deps",
    "format": "oxfmt .",
    "lint": "oxlint",
    "lint:fix": "oxlint --fix",
    "typecheck": "tsc"
  },
  "dependencies": {
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "zustand": "^5.0.11"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.2.1",
    "@types/node": "^22.15.1",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.4",
    "autoprefixer": "^10.4.24",
    "electron": "^40.6.0",
    "electron-builder": "^26.8.1",
    "electron-devtools-installer": "^4.0.0",
    "globals": "^17.3.0",
    "oxfmt": "^0.35.0",
    "oxlint": "^1.50.0",
    "tailwindcss": "^4.2.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.6"
  },
  "build": {
    "appId": "com.copies.app",
    "productName": "Copies",
    "directories": {
      "output": "dist"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": "dmg"
    },
    "dmg": {
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ]
    }
  }
}
